  const getActivityData = function (elem, href) {
    href = href || $(elem).attr("my-href");
    $.ajax({
      url: href,
      method: 'GET',
      success: function (response) {
        $('#activity-container').html(response);
      },
      error: function (error) {
        $('#activity-container').html(error.responseText);
      }
    })
  }

