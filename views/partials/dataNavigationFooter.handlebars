<div class="card-footer d-flex align-items-center border-top-0">
    <p class="m-0 text-secondary">
        Showing <span>{{data.pagination.startIndex}}</span> to <span>{{data.pagination.endIndex}}</span> of <span>{{data.pagination.totalEntries}}</span> entries
    </p>
    <ul class="pagination m-0 ms-auto">
        <!-- Previous button -->
        <li class="page-item {{#if (eq data.pagination.currentPage 1)}}disabled{{/if}}">
            <a class="page-link" 
            {{#unless (eq data.pagination.currentPage data.pagination.totalPages)}}
            href="?page={{dec data.pagination.currentPage}}&limit={{data.pagination.limit}}&search={{data.pagination.search}}&sortBy={{data.pagination.sort.sortBy}}&order={{data.pagination.sort.order}}{{#if data.pagination.filtersQuery}}&{{data.pagination.filtersQuery}}{{/if}}"
            {{/unless}}
            tabindex="-1" aria-disabled="{{#if (eq data.pagination.currentPage 1)}}true{{/if}}">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                    <path d="M15 6l-6 6l6 6"></path>
                </svg>
            </a>
        </li>

        {{#each data.pagination.pagesArray}}
            {{#if (eq this "..." )}}
                <li class="page-item disabled"><span class="page-link">...</span></li>
            {{else}}
                <li class="page-item {{#if (eq this ../data.pagination.currentPage)}}active{{/if}}">
                    <a class="page-link" href="?page={{this}}&limit={{../data.pagination.limit}}&search={{../data.pagination.search}}&sortBy={{../data.pagination.sort.sortBy}}&order={{../data.pagination.sort.order}}{{#if ../data.pagination.filtersQuery}}&{{../data.pagination.filtersQuery}}{{/if}}">{{this}}</a>
                </li>
            {{/if}}
        {{/each}}

        <!-- Next button -->
        <li class="page-item {{#if (eq data.pagination.currentPage data.pagination.totalPages)}}disabled{{/if}}">
            <a class="page-link" 
            {{#unless (eq data.pagination.currentPage data.pagination.totalPages)}}
            href="?page={{inc data.pagination.currentPage}}&limit={{data.pagination.limit}}&search={{data.pagination.search}}&sortBy={{data.pagination.sort.sortBy}}&order={{data.pagination.sort.order}}{{#if data.pagination.filtersQuery}}&{{data.pagination.filtersQuery}}{{/if}}"
            {{/unless}}
            tabindex="-1" aria-disabled="{{#if (eq data.pagination.currentPage 1)}}true{{/if}}">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                    <path d="M9 6l6 6l-6 6"></path>
                </svg>
            </a>
        </li>
    </ul>
</div>
