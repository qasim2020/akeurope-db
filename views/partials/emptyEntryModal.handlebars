<div class="modal modal-blur fade" id="modal-new-entry" tabindex="-1" style="display: none; padding-left: 0px;"
  aria-modal="true" role="dialog" projSlug="new-entry" entryId="{{data.newEntryId}}">
  <div class="modal-dialog modal-lg" role="document" id="create-entry">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">New entry</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="dynamicForm">
          <div class="mb-3">
            <table class="table table-vcenter">
              <tbody>
                {{#each data.fields}}
                <tr>
                  <td>
                    <label class="form-label mb-0" for="{{name}}">{{actualName}}</label>
                  </td>
                  <td>
                    {{#if (eq type "image")}}
                    <div
                      class="image-upload row text-center bg-secondary-lt justify-content-center d-flex align-items-center border rounded p-3"
                      style="margin: 0 0.5px">
                      <div class="col-md-6 mb-2 mb-md-0">
                        <a data-fslightbox="{{../data.entry._id}}" href="/static/images/no-image-placement.png">
                          <img class="img-thumbnail" src="/static/images/no-image-placement.png" alt=""
                            style="max-width: 200px;">
                        </a>
                        <input type="file" class="form-control d-none" name="{{name}}" accept="image/*">
                        <input type="hidden" class="cloudinaryUrl" name="{{name}}" />
                      </div>
                      <div class="col-md-6">
                        <a class="btn btn-secondary-outline btn-icon" onclick="uploadImage(this)">
                          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                            stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                            class="icon icon-tabler icons-tabler-outline icon-tabler-upload">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                            <path d="M4 17v2a2 2 0 0 0 2 2h12a2 2 0 0 0 2 -2v-2"></path>
                            <path d="M7 9l5 -5l5 5"></path>
                            <path d="M12 4l0 12"></path>
                          </svg>
                        </a>
                      </div>
                    </div>
                    {{else if (eq type "file")}}
                    <div class="input-group upload-pdf">
                      <input type="file" class="form-control no-valid" name="{{name}}" accept="application/pdf">
                      <input type="hidden" class="form-control cloudinaryUrl" name="{{name}}" />
                      <span class="btn btn-secondary-outline btn-icon" onclick="uploadPdf(this)">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                          stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                          class="icon icon-tabler icons-tabler-outline icon-tabler-upload">
                          <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                          <path d="M4 17v2a2 2 0 0 0 2 2h12a2 2 0 0 0 2 -2v-2"></path>
                          <path d="M7 9l5 -5l5 5"></path>
                          <path d="M12 4l0 12"></path>
                        </svg>
                      </span>
                    </div>
                    {{else if (eq type "textarea")}}
                    <textarea rows="5" class="form-control" name="{{name}}" placeholder="Here can be your description"
                      value="Mike">Long text comes here</textarea>
                    {{else if (eq type "dropdown")}}
                    <select class="form-select" name="{{name}}">
                      {{#each options}}
                      <option value="{{this.value}}">{{this.value}}</option>
                      {{/each}}
                    </select>
                    {{else if (eq type "date")}}
                    <input type="date" class="form-control" name="{{name}}">
                    {{else if (eq type "boolean")}}
                    <select class="form-select" name="{{name}}">
                      <option value="{{options.0.value}}">{{options.0.value}}</option>
                      <option value="{{options.1.value}}">{{options.1.value}}</option>
                    </select>
                    {{else if (eq type "string")}}
                    <input type="text" class="form-control" name="{{name}}" placeholder="String value">
                    {{else if (eq type "number")}}
                    <input type="number" class="form-control" name="{{name}}" placeholder="Only numbers are allowed">
                    {{else}}
                    <input type="text" class="form-control" name="{{name}}" placeholder="String value">
                    {{/if}}
                  </td>
                </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <a href="#" class="btn btn-link link-secondary" data-bs-dismiss="modal"> Cancel </a>
        <a href="#" class="btn btn-primary ms-auto" onclick="editEntry(this)">
          <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24"
            stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
            <path d="M12 5l0 14"></path>
            <path d="M5 12l14 0"></path>
          </svg> Create new entry </a>
      </div>
    </div>
  </div>
</div>