<div class="modal modal-blur fade" id="modal-payment-{{data.order._id}}" tabindex="-1"
    style="display: none; padding-left: 0px;" aria-modal="true" role="dialog" entryId="">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Proof of Payment</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="accordion" id="accordion-{{data.order._id}}">
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                        data-bs-target="#accordion-customer-{{data.order._id}}">
                                        Customer: {{data.order.customer.name}}
                                    </button>
                                </h2>
                                <div id="accordion-customer-{{data.order._id}}" class="accordion-collapse collapse"
                                    data-bs-parent="#accordion-{{data.order._id}}">
                                    <div class="accordion-body">
                                        <div class="datagrid">
                                            <div class="datagrid-item">
                                                <div class="datagrid-title">Name</div>
                                                <div class="datagrid-content">{{data.order.customer.name}}</div>
                                            </div>
                                            <div class="datagrid-item">
                                                <div class="datagrid-title">Organization</div>
                                                <div class="datagrid-content">{{data.order.customer.organization}}
                                                </div>
                                            </div>
                                            <div class="datagrid-item">
                                                <div class="datagrid-title">Location</div>
                                                <div class="datagrid-content">{{data.order.customer.location}}</div>
                                            </div>
                                            <div class="datagrid-item">
                                                <div class="datagrid-title">Previous payments</div>
                                                <div class="datagrid-content">{{data.order.customer.payments}}</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {{#each data.order.projects as |project|}}
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                        data-bs-target="#accordion-project-{{@index}}-{{../data.order._id}}">
                                        {{project.project.name}}: {{project.project.totalOrderedCostAllMonths}}
                                        {{project.project.selectedCurrency}}
                                    </button>
                                </h2>
                                <div id="accordion-project-{{@index}}-{{../data.order._id}}"
                                    class="accordion-collapse collapse"
                                    data-bs-parent="#accordion-{{../data.order._id}}">
                                    <div class="accordion-body">
                                        <div class="datagrid">
                                            <div class="datagrid-item">
                                                <div class="datagrid-title">Project</div>
                                                <div class="datagrid-content">{{project.project.name}}</div>
                                            </div>
                                            <div class="datagrid-item">
                                                <div class="datagrid-title">Selected Beneficiaries</div>
                                                <div class="datagrid-content">{{project.project.entriesCount}}</div>
                                            </div>
                                            <div class="datagrid-item">
                                                <div class="datagrid-title">Months</div>
                                                <div class="datagrid-content">{{project.project.months}}</div>
                                            </div>
                                            <div class="datagrid-item">
                                                <div class="datagrid-title">Cost</div>
                                                <div class="datagrid-content">
                                                    {{project.project.totalOrderedCostAllMonths}}
                                                    {{project.project.selectedCurrency}}</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {{/each}}
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button" type="button" data-bs-toggle="collapse"
                                        data-bs-target="#accordion-invoice-{{data.order._id}}">
                                        Invoice: {{data.order.totalCost}} {{data.order.currency}}
                                    </button>
                                </h2>
                                <div id="accordion-invoice-{{data.order._id}}" class="accordion-collapse collapse show"
                                    data-bs-parent="#accordion-{{data.order._id}}">
                                    <div class="accordion-body">
                                        <div class="datagrid">
                                            <div class="datagrid-item">
                                                <div class="datagrid-title">Invoice #</div>
                                                <div class="datagrid-content">{{data.order.orderNo}}</div>
                                            </div>
                                            <div class="datagrid-item">
                                                <div class="datagrid-title">Date</div>
                                                <div class="datagrid-content">{{formatDate data.order.modifiedAt}}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label">Upload Proof of Payment</label>
                            <input type="file" class="form-control" name="proof_of_payment"
                                accept=".jpg,.jpeg,.png,.pdf" required="">
                            <small class="form-hint">Accepted formats: JPG, PNG, PDF</small>
                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <a href="#" class="btn btn-link link-default" data-bs-dismiss="modal"> Cancel </a>
                <div class="ms-auto">
                    <a href="#" class="btn btn-primary" onclick="loadPaymentModal(this)">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                            stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                            class="icon icon-tabler icons-tabler-outline icon-tabler-credit-card-pay">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                            <path d="M12 19h-6a3 3 0 0 1 -3 -3v-8a3 3 0 0 1 3 -3h12a3 3 0 0 1 3 3v4.5" />
                            <path d="M3 10h18" />
                            <path d="M16 19h6" />
                            <path d="M19 16l3 3l-3 3" />
                            <path d="M7.005 15h.005" />
                            <path d="M11 15h2" />
                        </svg>
                        Save Payment
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<button href="#" class="btn btn-primary d-none" id="button-modal-payment-{{data.order._id}}" data-bs-toggle="modal"
    data-bs-target="#modal-payment-{{data.order._id}}"></button>