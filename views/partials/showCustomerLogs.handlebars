
  <div class="d-block col-12 col-md-6" id="logs-container">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">Updates</h3>
      </div>
      <div class="card-body">
        {{#if data.customerLogs}}
        <ul class="steps steps-vertical">
          {{#each data.customerLogs as |log|}}
            {{> components/showLogSteps log=log showActor=true showEntity=false}}
          {{/each}}
        </ul>
        {{else}}
        <div class="text-center"><p>No logs stored for this entity!</p></div>
        {{/if}}
      </div>
    </div>

