<div class="modal modal-blur fade" id="modal-sponsorship-{{data.entry._id}}" tabindex="-1" role="dialog"
  entry-id="{{data.entry._id}}">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Handle Sponsorship</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <div class="modal-body">
        {{log data.orders}}
        {{#each data.orders}}
        <div class="card mb-3">
          <div class="card-body">
            <h5 class="card-title">Order #{{this.orderNo}}</h5>
            <p class="card-text">From: {{formatDate this.createdAt}}</p>
            <p class="card-text">To: {{expiresOn this.createdAt this.project.months}}</p>
            <p class="card-text">Status: {{capitalizeFirstLetter this.status}}</p>
            <p class="card-text">Amount: {{this.entry.perMonthCost}} {{this.currency}}</p>
            <p class="card-text">Customer: {{this.customerId.name}}</p>
            <button class="btn btn-danger btn-sm" onclick="stopSponsorship('{{this._id}}', '{{../data.entry._id}}', '{{../data.project.slug}}')">
              Stop Sponsorship
            </button>
          </div>
        {{/each}}
      </div>

      <div class="modal-footer">
        <div class="ms-auto">
          <a href="#" class="btn btn-link link-default cancel-btn" data-bs-dismiss="modal"> Close </a>
        </div>
      </div>
    </div>
  </div>
</div>

<button href="#" class="btn btn-primary d-none" id="button-sponsorship-{{data.entry._id}}" data-bs-toggle="modal"
  data-bs-target="#modal-sponsorship-{{data.entry._id}}"></button>