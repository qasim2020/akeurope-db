{{#with data.user as |user|}}
<div class="col-12 col-md-6 mb-auto" id="user-container">
  <div class="card mb-3 data-row">
    <div class="card-header">
      <h3 class="card-title"><span class="badge bg-blue-lt">{{user.name}}</span></h3>
    </div>
    <div class="card-body">
      <div class="datagrid">

        <div class="datagrid-item">
          <div class="datagrid-title">Name</div>
          <div class="datagrid-content">
            <span>{{user.name}}</span>
          </div>
        </div>

        <div class="datagrid-item">
          <div class="datagrid-title">Email</div>
          <div class="datagrid-content">
            <span>{{user.email}}</span>
          </div>
        </div>

        <div class="datagrid-item">
          <div class="datagrid-title">Role</div>
          <div class="datagrid-content">
            <span>{{capitalizeFirstLetter user.role}}</span>
          </div>
        </div>

        <div class="datagrid-item">
          <div class="datagrid-title">Projects</div>
          <div class="datagrid-content">
            {{#each user.projects}}
            <a href="/project/{{this}}" class="badge bg-blue-lt mb-1">{{kebabCaseToNormalString this}}</a>
            {{/each}}
          </div>
        </div>

        <div class="datagrid-item">
          <div class="datagrid-title">Status</div>
          <div class="datagrid-content">
            <span>{{user.status}}</span>
          </div>
        </div>

      </div>
    </div>
    {{#if (findInArray ../data.role 'editUsers')}}
    <div class="card-footer">
      <button class="btn text-blue cursor-pointer" user-id="{{user._id}}" data-bs-toggle="modal"
        data-bs-target="#modal-{{user._id}}">Edit</button>
    </div>
    {{/if}}
  </div>
</div>
{{/with}}