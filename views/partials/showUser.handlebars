 <div class="row row-deck row-cards">

  {{#with data.user as |user|}}
  <div class="col-12 col-md-6 mb-auto">
    <div class="card mb-3 data-row">
      <div class="card-header">
        <h3 class="card-title"><span class="badge bg-blue-lt">{{user.name}}</span></h3>
      </div>
      <div class="card-body">
        <div class="datagrid">

            <div class="datagrid-item">
              <div class="datagrid-title">Name</div>
              <div class="datagrid-content">
                <span>{{user.name}}</span>
              </div>
            </div>

            <div class="datagrid-item">
              <div class="datagrid-title">Email</div>
              <div class="datagrid-content">
                <span>{{user.email}}</span>
              </div>
            </div>

            <div class="datagrid-item">
              <div class="datagrid-title">Role</div>
              <div class="datagrid-content">
                <span>{{capitalizeFirstLetter user.role}}</span>
              </div>
            </div>

            <div class="datagrid-item">
              <div class="datagrid-title">Status</div>
              <div class="datagrid-content">
                <span>{{user.status}}</span>
              </div>
            </div>

        </div>
      </div>
      <div class="card-body">
          {{#if (neq user.email ../data.userEmail)}}
            <button class="btn text-blue cursor-pointer" user-id="{{user._id}}" onclick="getEditUserModal(this)">Edit</button>
            <button class="btn text-red cursor-pointer" user-id="{{user._id}}" onclick="deleteUser(this)">Delete</button>
          {{else}}
            <p>An administrator can't edit or delete themselves.</p>
          {{/if}}
      </div>
    </div>
  </div>
  {{/with}}

  <div class="d-block col-12 col-md-6" id="activity-container">
    {{> showUserActivity}}
  </div>

 </div>
