{{#if (or (eq order.status 'aborted') (eq order.status 'draft')) }}
<div class="col-12 pb-2 product" product-id="{{product.id}}" order-id="{{order._id}}">
    <div class="card border-0 flex-row h-100 rounded-3">
        <div class="pt-1 w-100 h-100 d-flex flex-column">
            <div class="card-title mb-1 fs-3"> {{product.name}} </div>
            <div class="text-secondary fs-4"> {{product.desc}} </div>
            <div class="text-muted">{{product.description}}</div>
            {{#each product.variants as |variant|}}
                {{> productVariant order=../order product=product variant=variant }}
            {{/each}}
        </div>
    </div>
</div>
{{else}}
{{#if (gt product.orderedCost 0)}}
<div class="col-12 pb-2 product" product-id="{{product.id}}" order-id="{{order._id}}">
    <div class="card border-0 flex-row h-100 rounded-3">
        <div class="pt-1 w-100 h-100 d-flex flex-column">
            <div class="card-title mb-1 fs-3"> {{product.name}} </div>
            <div class="text-muted">{{product.description}}</div>
            {{#each product.variants as |variant|}}
                {{> productVariant order=../order product=product variant=variant }}
            {{/each}}
        </div>
    </div>
</div>
{{/if}}
{{/if}}
