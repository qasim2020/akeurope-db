<div class="card-body">
    <ul class="steps steps-blue steps-counter my-4">
        <li class="step-item active">Download Template</li>
        <li class="step-item">Upload File</li>
        <li class="step-item">Summary</li>
    </ul>
</div>
<div class="card-body">
     <div class="table-responsive mb-3">
        <table class="table table-vcenter card-table table-nowrap">
            <tbody>
                <tr>
                    <th>Ser</th>
                    <th>Field Name</th>
                    <th>Field Type</th>
                </tr>
                {{#each data.project.fields}}
                <tr>
                    <td>{{inc @key}}</td>
                    {{#if this.primary}}
                    <td><span class="badge bg-red-lt">{{this.name}}</span></td>
                    {{else}}
                    <td><span class="badge bg-blue-lt">{{this.name}}</span></td>
                    {{/if}}
                    <td>{{checkInputType this.type}}. {{#if this.primary}} Non repeatable field. {{/if}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    <div class="text-center">
        <a href="/downloadExcelTemplate/{{data.project.slug}}" class="btn btn-primary" download> Download Template</a>
    </div>
</div>
<div class="card-body">
    <ul class="pagination ">
        <li class="page-item page-next ">
            <a class="page-link next cursor-pointer" onclick="moveNext(this)" data-url="/uploadExcel/step-2/{{data.project.slug}}">
                <div class="page-item-subtitle">next</div>
                <div class="page-item-title">Upload Template</div>
            </a>
        </li>
    </ul>
</div>