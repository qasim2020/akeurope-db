{{#with data.order as |order|}}
<div class="mb-3">
  <div class="fw-medium d-block mb-1">{{product.name}}</div>
  <div class="card border">
    {{#each product.variants}}
    <div class="p-2 d-flex justify-content-between align-items-center {{#unless @last}}border-bottom{{/unless}}">
      <div class="">
        <strong>{{this.name}}</strong><br>
        <small class="text-muted">{{this.price}} {{../../data.project.currency}}</small>
      </div>
      <div class="btn-group">
        <button class="btn btn-outline-secondary">
          <i class="ti ti-minus"></i>
        </button>
        <button class="btn btn-outline-secondary">
          <i class="ti ti-plus"></i>
        </button>
      </div>
    </div>
    {{/each}}
  </div>
</div>
{{/each}}